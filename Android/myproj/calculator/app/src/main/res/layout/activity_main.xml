<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.promact.calculator.MainActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:columnCount="4"
        android:rowCount="6"
        >
        <TextView
            android:text=""
            android:textAlignment="textEnd"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_txt_input"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text=""
            android:textAlignment="textEnd"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/main_txt_output"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />




        <Button
            android:id="@+id/main_btn_7"
            android:text="7"


            />
        <Button
            android:id="@+id/main_btn_8"
            android:text="8"

            />
        <Button
            android:id="@+id/main_btn_9"
            android:text="9"

            />
        <Button
            android:id="@+id/main_btn_plus"
            android:text="+"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"

            />
        <Button
            android:id="@+id/main_btn_4"
            android:text="4"

            />
        <Button
            android:id="@+id/main_btn_5"
            android:text="5"

            />
        <Button
            android:id="@+id/main_btn_6"
            android:text="6"

            />
        <Button
            android:id="@+id/main_btn_1"
            android:text="1"

            />
        <Button
            android:id="@+id/main_btn_2"
            android:text="2"

            />
        <Button
            android:id="@+id/main_btn_3"
            android:text="3"

            />
        <Button
            android:id="@+id/main_btn_minus"
            android:text="-"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/main_btn_c"
            android:text="C"

            />
        <Button
            android:id="@+id/main_btn_0"
            android:text="0"

            />
        <Button
            android:id="@+id/main_btn_equal"
            android:text="="

            />



    </GridLayout>


</RelativeLayout>
